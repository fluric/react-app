{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react-hooks/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js"
        ]
      }
    ],
    "no-unused-vars": "warn"
  },
  "settings": {
    "react": {
      "pragma": "React",
      // Pragma to use, default to "React"
      "fragment": "Fragment",
      "version": "detect"
    }
  }
}
